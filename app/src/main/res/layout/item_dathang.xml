<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/item_datHang_loadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/item_datHang_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_datHang_img"
            android:layout_width="125dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"/>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_datHang_txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"/>
            <TextView
                android:id="@+id/item_datHang_txt_sl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="1"
                android:gravity="end"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"/>
            <TextView
                android:id="@+id/item_datHang_txtGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="1"
                android:textColor="@color/red"
                android:gravity="end"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>