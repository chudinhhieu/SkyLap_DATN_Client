<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.UserFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
      >


        <LinearLayout
           android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_user_imgAvataUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/img" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_weight="6"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/fragment_user_txtNameUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Vũ Huy Hoang"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/fragment_user_txtLevelVip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_view7dp"
                    android:backgroundTint="@color/light_gray"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Thành viên Bạc" />



            </LinearLayout>
            <ImageView
                android:id="@+id/frament_user_imgLevelVip"
                android:src="@drawable/medal_gold_vip3"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/frament_user_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/frament_user_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>