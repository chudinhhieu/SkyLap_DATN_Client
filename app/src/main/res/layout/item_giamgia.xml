<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:elevation="10dp">

            <ImageView
                android:id="@+id/item_giamgia_image"
                android:layout_width="90dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_height="90dp"
                />
            <LinearLayout
                android:layout_toLeftOf="@+id/btn_dungngay"
                android:layout_toRightOf="@+id/item_giamgia_image"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/item_giamgia_mota"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Mô tả"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/item_giamgia_code"
                    android:text="Code"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:layout_marginVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thời gian"
                    android:maxLines="1"
                    android:textSize="11sp"
                    android:ellipsize="end"
                    android:id="@+id/item_giamgia_thoigian"/>
            </LinearLayout>
                <Button
                    android:id="@+id/btn_dungngay"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textSize="13sp"
                    android:layout_centerVertical="true"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:text="Áp dụng"
                    android:textColor="@color/main"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/custom_border"/>
</RelativeLayout>