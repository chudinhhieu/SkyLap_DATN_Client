<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activities.SanPhamActivity">
    <RelativeLayout
        android:id="@+id/asp_rl_top"
        android:layout_alignParentTop="true"
        android:background="@color/main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="20dp"
        android:paddingHorizontal="12dp">
        <ImageView
            android:id="@+id/asp_img_back"
            android:layout_width="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_height="35dp"
            android:src="@drawable/ic_white_back"/>
        <ImageView
            android:id="@+id/asp_img_gio_hang"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_cart"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/asp_ll_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:elevation="20dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingVertical="6dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/asp_img_chat"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_chat_main"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingVertical="6dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/asp_img_add_cart"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_add_cart_main"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/main"
            android:gravity="center"
            android:layout_weight="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:text="MUA NGAY"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>