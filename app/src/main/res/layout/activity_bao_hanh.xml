<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activities.BaoHanhActivity">
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />
    <RelativeLayout
        android:id="@+id/ath_view_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="20dp"
            android:paddingHorizontal="12dp">
            <ImageView
                android:id="@+id/ath_img_back"
                android:layout_width="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Yêu cầu bảo hành"
                android:textColor="@color/black"
                android:textSize="24dp" />
        </RelativeLayout>

        <ScrollView
            android:layout_below="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:id="@+id/cardView"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:id="@+id/ath_ln_item1"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/imgSanPhamTH"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/tvSanPhamTH"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginStart="10dp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textStyle="bold"
                                android:textSize="16dp"/>
                            <TextView
                                android:id="@+id/tvRamRomTH"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:textSize="15dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tv_11"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/cardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn imei máy cần bảo hành"/>
                <Spinner
                    android:id="@+id/spn_traHang"
                    android:layout_below="@id/tv_11"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bgr_spn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/ath_ln_item2"
                    android:layout_below="@+id/spn_traHang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ln_itemAnhTH"
                        android:background="@drawable/bg_add_photo"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imgAddphotoTH"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/dr_photo"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thêm ảnh"
                            android:textSize="16dp"
                            android:textColor="#F7801A"
                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/rcy_AnhTH"/>
                    <LinearLayout
                        android:background="@drawable/bg_noidung"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lý do bảo hành"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:padding="8dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/black"/>
                        <EditText
                            android:id="@+id/edtLyDoTH"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:textSize="15dp"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:hint="Nhập lý do bảo hành vào đây..."
                            android:background="@drawable/grey_background"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_item3"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ath_ln_item2"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btnGuiTH"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gửi yêu cầu"
                        android:background="@drawable/border_view7dp"
                        android:textSize="16dp"
                        android:textColor="#FEFEFE"
                        android:textStyle="normal"/>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
