<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context=".ui.activities.ThemDiaChiActivity">
    <RelativeLayout
        android:id="@+id/atdc_rl_top"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="20dp"
        android:paddingHorizontal="12dp">
        <ImageView
            android:id="@+id/atdc_img_back"
            android:layout_width="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Thêm địa chỉ"
            android:textColor="@color/black"
            android:textSize="24dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/atdc_rl_top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <LinearLayout
           android:id="@+id/view_sdt"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:paddingVertical="8dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="14sp"
               android:layout_marginStart="10dp"
               android:text="Số điện thoại"/>
           <EditText
               android:paddingHorizontal="10dp"
               android:id="@+id/atdc_ipSdt"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:background="@color/white"
               android:textSize="15sp"
               android:inputType="phone"
               android:hint="Số điện thoại"/>
       </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:paddingVertical="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:text="Tỉnh/Thành phố"/>
        <Spinner
            android:id="@+id/spinner_level1"
            android:layout_width="match_parent"
            android:paddingHorizontal="10dp"
            android:background="@drawable/bgr_spn"
            android:layout_height="50dp"/>
        <TextView
            android:paddingVertical="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:text="Quận/Huyện"/>
        <Spinner
            android:id="@+id/spinner_level2"
            android:background="@drawable/bgr_spn"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:paddingVertical="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:text="Phường/Xã"/>
        <Spinner
            android:id="@+id/spinner_level3"
            android:background="@drawable/bgr_spn"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:paddingVertical="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:text="Tên đường/Tòa nhà/Số nhà"/>
        <EditText
            android:paddingHorizontal="10dp"
            android:id="@+id/atdc_ipDuong"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:textSize="15sp"
            android:hint="Tên đường,Tòa nhà,Số nhà"/>
        <TextView
            android:paddingVertical="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:text="Chi tiết"/>
        <TextView
            android:id="@+id/atdc_tvDiaChi"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingVertical="15dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Địa chỉ"/>
    </LinearLayout>
    <Button
        android:id="@+id/atdc_btn"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="50dp"
        android:background="@color/main"
        android:text="HOÀN THÀNH"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>